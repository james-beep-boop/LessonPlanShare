APP_NAME="Lesson Plan Exchange"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://www.sheql.com

LOG_CHANNEL=single
LOG_LEVEL=error

# ─── Database ───────────────────────────────────────────────
# DreamHost: Create a MySQL database in your panel first.
# The host is typically mysql.yourdomain.com
DB_CONNECTION=mysql
DB_HOST=mysql.sheql.com
DB_PORT=3306
DB_DATABASE=sheql_lessons
DB_USERNAME=sheql_dbuser
DB_PASSWORD=

# ─── File Storage ───────────────────────────────────────────
FILESYSTEM_DISK=public

# ─── Sessions & Cache (file-based for shared hosting) ──────
SESSION_DRIVER=file
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax
CACHE_STORE=file
QUEUE_CONNECTION=sync

# ─── Mail (required for password resets & email verification) ────
# DreamHost email: david@sheql.com
# Username must be the FULL email address (not just "david").
MAIL_MAILER=smtp
MAIL_HOST=mail.sheql.com
MAIL_PORT=587
MAIL_USERNAME=david@sheql.com
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="david@sheql.com"
MAIL_FROM_NAME="ARES Education"
