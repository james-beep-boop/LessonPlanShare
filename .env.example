APP_NAME="Lesson Plan Exchange"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://www.sheql.com

LOG_CHANNEL=single
LOG_LEVEL=error

# ─── Database ───────────────────────────────────────────────
# DreamHost: Create a MySQL database in your panel first.
# The host is typically mysql.yourdomain.com
DB_CONNECTION=mysql
DB_HOST=mysql.sheql.com
DB_PORT=3306
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=

# ─── File Storage ───────────────────────────────────────────
FILESYSTEM_DISK=public

# ─── Sessions & Cache (file-based for shared hosting) ──────
SESSION_DRIVER=file
CACHE_STORE=file
QUEUE_CONNECTION=sync

# ─── Mail (required for password resets & email verification) ────
# Create noreply@sheql.com in DreamHost Panel > Mail > Manage Email.
# Username must be the FULL email address (not just "noreply").
MAIL_MAILER=smtp
MAIL_HOST=mail.sheql.com
MAIL_PORT=587
MAIL_USERNAME=noreply@sheql.com
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@sheql.com"
MAIL_FROM_NAME="Lesson Plan Exchange"
